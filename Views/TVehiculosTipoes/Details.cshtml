@model ProyectoPrograAvanzada.Models.TVehiculosTipo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Tipos de Vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Descripción</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            <label>Tarifa diaria</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarifaDiaria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdTipo">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
