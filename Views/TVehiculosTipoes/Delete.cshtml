@model ProyectoPrograAvanzada.Models.TVehiculosTipo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que quiere eliminar?</h3>
<div>
    <h4>Tipos de vehículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Descripción</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            <label>Tarifa diaria</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarifaDiaria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTipo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
