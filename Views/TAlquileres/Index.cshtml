@model IEnumerable<ProyectoPrograAvanzada.Models.TAlquilere>

@{
    ViewData["Title"] = "Alquileres";
}

<h1>Alquileres</h1>

<p>
    <a href="/TAlquileres/Create">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Sucursal</th>
            <th>Empleado</th>
            <th>IVA (%)</th>
            <th>Total</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // Calcular totales
            var subtotal = item.TAlquileresDetalles?.Sum(d => d.Subtotal) ?? 0;
            var ivaMonto = subtotal * (item.Iva / 100m);
            var total = subtotal + ivaMonto;

            <tr>
                <td>@item.IdClienteNavigation?.Nombre</td>
                <td>@item.IdSucursalNavigation?.Nombre</td>
                <td>@item.IdEmpleadoNavigation?.Nombre</td>
                <td>@item.Iva %</td>
                <td><strong>₡@total.ToString("N2")</strong></td>
                <td>@item.Estado</td>

                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdAlquiler }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdAlquiler }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAlquiler })
                </td>
            </tr>
        }
    </tbody>
</table>
