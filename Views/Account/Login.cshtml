@model ProyectoPrograAvanzada.ViewModels.LoginViewModel
@inject ProyectoPrograAvanzada.Data.DbAlquilerVehiculosContext Context
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
    var hayEmpleados = Context.TEmpleados.Any();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentACar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #003973 0%, #005fa3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            max-width: 450px;
            width: 100%;
            padding: 20px;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h2 {
            color: #003973;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .login-header p {
            color: #6c757d;
            font-size: 0.95rem;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #003973, #005fa3);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
        }

        .logo-icon i {
            font-size: 2.5rem;
            color: white;
        }

        .form-floating {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid #e9ecef;
            padding: 12px 45px 12px 15px;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #005fa3;
            box-shadow: 0 0 0 0.2rem rgba(0, 95, 163, 0.15);
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
            z-index: 10;
            transition: color 0.3s;
        }

        .password-toggle:hover {
            color: #005fa3;
        }

        .btn-login {
            background: linear-gradient(90deg, #003973, #005fa3);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 95, 163, 0.3);
        }

        .btn-register {
            background: white;
            border: 2px solid #005fa3;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: #005fa3;
            width: 100%;
            transition: all 0.3s;
            margin-top: 10px;
        }

        .btn-register:hover {
            background: #005fa3;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 95, 163, 0.3);
        }

        .form-check-input:checked {
            background-color: #005fa3;
            border-color: #005fa3;
        }

        .validation-summary-errors {
            background-color: #f8d7da;
            border: 1px solid #f5c2c7;
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .validation-summary-errors ul {
            margin-bottom: 0;
            padding-left: 20px;
        }

        .validation-summary-errors li {
            color: #842029;
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .footer-text {
            text-align: center;
            margin-top: 20px;
            color: white;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="logo-container">
                <div class="logo-icon">
                    <i class="bi bi-car-front-fill"></i>
                </div>
            </div>

            <div class="login-header">
                <h2>Bienvenido</h2>
                <p>Sistema de Alquiler de Vehículos</p>
            </div>

            @if (!hayEmpleados)
            {
                <div class="alert alert-warning text-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Configuración inicial requerida</strong><br />
                    No hay usuarios en el sistema.
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" autocomplete="username" />
                    <label asp-for="Email"><i class="bi bi-envelope me-2"></i>Correo Electrónico</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3" style="position: relative;">
                    <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Contraseña" autocomplete="current-password" />
                    <label asp-for="Password"><i class="bi bi-lock me-2"></i>Contraseña</label>
                    <i class="bi bi-eye password-toggle" id="togglePassword"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">
                        Recordarme
                    </label>
                </div>

                <button type="submit" class="btn btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                </button>

                @if (!hayEmpleados)
                {
                    <a asp-action="Register" class="btn btn-register">
                        <i class="bi bi-person-plus me-2"></i>Crear Administrador
                    </a>
                }
            </form>
        </div>

        <div class="footer-text">
            © 2025 Sistema Alquiler Vehículos
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');

        togglePassword.addEventListener('click', function () {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Toggle icon
            this.classList.toggle('bi-eye');
            this.classList.toggle('bi-eye-slash');
        });

        // Auto-focus en el primer campo
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('input[name="Email"]').focus();
        });
    </script>
</body>
</html>
